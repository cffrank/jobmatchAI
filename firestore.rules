rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Users collection - top level profile data
    match /users/{userId} {
      // Users can only read and write their own profile
      allow read, write: if isAuthenticated() && isOwner(userId);

      // Work Experience subcollection
      match /workExperience/{experienceId} {
        allow read, write: if isAuthenticated() && isOwner(userId);
      }

      // Education subcollection
      match /education/{educationId} {
        allow read, write: if isAuthenticated() && isOwner(userId);
      }

      // Skills subcollection
      match /skills/{skillId} {
        allow read, write: if isAuthenticated() && isOwner(userId);
      }

      // Resumes subcollection
      match /resumes/{resumeId} {
        allow read, write: if isAuthenticated() && isOwner(userId);
      }

      // Saved jobs subcollection
      // Users can save/bookmark jobs they're interested in
      match /savedJobs/{jobId} {
        allow read, write: if isAuthenticated() && isOwner(userId);
      }

      // Jobs collection - user's discovered jobs from searches
      // Populated by scrapeJobs Cloud Function, user has full control
      match /jobs/{jobId} {
        allow read, write: if isAuthenticated() && isOwner(userId);
      }

      // Job searches history - metadata about past searches
      match /jobSearches/{searchId} {
        allow read: if isAuthenticated() && isOwner(userId);
        // Write restricted to Cloud Functions
        allow write: if false;

        // Individual jobs from each search
        match /jobs/{jobId} {
          allow read: if isAuthenticated() && isOwner(userId);
          // Write restricted to Cloud Functions
          allow write: if false;
        }
      }

      // Generated applications subcollection
      match /applications/{applicationId} {
        allow read, write: if isAuthenticated() && isOwner(userId);

        // Email history for each application
        match /emails/{emailId} {
          allow read: if isAuthenticated() && isOwner(userId);
          // Write restricted to Cloud Functions
          allow write: if false;
        }
      }

      // Tracked applications subcollection
      match /trackedApplications/{trackedAppId} {
        allow read, write: if isAuthenticated() && isOwner(userId);
      }

      // Subscription document
      match /subscription {
        allow read: if isAuthenticated() && isOwner(userId);
        // Write restricted to Cloud Functions (Stripe webhooks)
        allow write: if false;
      }

      // Usage limits document
      match /usageLimits {
        allow read: if isAuthenticated() && isOwner(userId);
        // Write restricted to Cloud Functions
        allow write: if false;
      }

      // Invoices subcollection
      match /invoices/{invoiceId} {
        allow read: if isAuthenticated() && isOwner(userId);
        // Write restricted to Cloud Functions (Stripe webhooks)
        allow write: if false;
      }

      // Payment methods subcollection
      match /paymentMethods/{methodId} {
        allow read: if isAuthenticated() && isOwner(userId);
        // Write restricted to Cloud Functions (Stripe API)
        allow write: if false;
      }

      // Notifications subcollection
      match /notifications/{notificationId} {
        allow read: if isAuthenticated() && isOwner(userId);
        // Write restricted to Cloud Functions (system notifications)
        allow write: if false;
      }

      // Email history subcollection (for rate limiting)
      match /emails/{emailId} {
        allow read: if isAuthenticated() && isOwner(userId);
        // Write restricted to Cloud Functions
        allow write: if false;
      }
    }

    // Legacy global jobs collection - DEPRECATED
    // This collection is no longer used. Jobs are now stored per-user at users/{userId}/jobs
    // Keeping this rule to prevent accidental access to any legacy data
    match /jobs/{jobId} {
      // Deny all access - jobs are now user-scoped
      allow read, write: if false;
    }

    // OAuth state tokens (temporary, cleaned up after use)
    // Used for LinkedIn OAuth CSRF protection
    match /_oauth_states/{stateId} {
      // Only Cloud Functions can read/write
      // These tokens are created by linkedInAuth and consumed by linkedInCallback
      allow read, write: if false;
    }
  }
}
