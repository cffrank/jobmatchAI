{
  "name": "jobmatch-ai-backend",
  "version": "1.0.6",
  "description": "Express.js backend for JobMatch AI - migrated from Firebase Cloud Functions",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:production": "vitest run tests/api/production.test.ts",
    "test:cors": "vitest run tests/integration/cors.test.ts",
    "audit": "npm audit --audit-level=moderate",
    "audit:fix": "npm audit fix"
  },
  "dependencies": {
    "@sendgrid/mail": "^8.1.4",
    "@supabase/supabase-js": "^2.47.10",
    "@types/sanitize-html": "^2.16.0",
    "apify-client": "^2.21.0",
    "cors": "^2.8.5",
    "docx": "^8.5.0",
    "dotenv": "^17.2.3",
    "express": "^4.21.2",
    "helmet": "^8.0.0",
    "node-cron": "^3.0.3",
    "openai": "^4.77.3",
    "pdfkit": "^0.15.0",
    "sanitize-html": "^2.17.0",
    "uuid": "^11.0.3",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.5",
    "@types/node-cron": "^3.0.11",
    "@types/pdfkit": "^0.17.4",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@vitest/ui": "^4.0.16",
    "c8": "^10.1.3",
    "supertest": "^7.1.4",
    "tsx": "^4.21.0",
    "typescript": "^5.7.3",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "jobmatch",
    "express",
    "typescript",
    "supabase",
    "openai"
  ],
  "author": "",
  "license": "MIT"
}
